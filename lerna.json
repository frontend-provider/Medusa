{
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": ["master", "release/*"],
      "bump": "patch",
      "conventionalCommits": true,
      "message": "chore(release): Publish"
    }
  },
  "registry": "https://registry.npmjs.org/",
  "ignoreChanges": [
    "CHANGELOG.md",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__testfixtures__/**"
  ],
  "version": "independent"
}
