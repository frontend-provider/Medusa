{
  "compilerOptions": {
    "rootDir": "src",
    "module": "esnext",
    "target": "ES2015",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", " **/tests/*"]
}
